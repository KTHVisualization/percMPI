{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "sh",
    "isShellCommand": true,
    "args": [
        "-c"
    ],
    "showOutput": "always",
    "suppressTaskName": true,
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "taskName": "Single node",
            "args": [
                "mkdir -p builds && cd builds && cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug -DCMAKE_CXX_FLAGS='-D_GLIBCXX_DEBUG -DSINGLENODE' .. && make -j 8 && mpirun -np 1 ./PercMPI ../../Data/Percolation/P3 uv_005 193 194 1000 193 194 1000"
            ],
            "isBuildCommand": true
        },
        {
            "taskName": "cmake",
            "args": [
                "mkdir -p build && cd build && cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug -DCMAKE_CXX_FLAGS='-D_GLIBCXX_DEBUG' .."
            ]
        },
        {
            "taskName": "make",
            "args": [
                "cd build && make -j 8"
            ],
            "isBuildCommand": true
        },
        {
            "taskName": "Single Node, Communication, Test",
            "args": [
                "mkdir -p buildsct; cd buildsct; cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug -DCMAKE_CXX_FLAGS='-D_GLIBCXX_DEBUG -DSINGLENODE -DCOMMUNICATION -DTEST' .. && echo Running WhiteRed and WhiteRedGreen Communcation Test  && make -j 8; mpirun -np 1 ./PercMPI ../../Data/Percolation/P3 uv_005 193 194 1000 193 194 1000"
            ],
            "isBuildCommand": true
        },
        {
            "taskName": "Single Node, No Communicate, Test",
            "args": [
                "mkdir -p buildst; cd buildst; cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug -DCMAKE_CXX_FLAGS='-D_GLIBCXX_DEBUG -DSINGLENODE -DTEST' .. && make -j 8; mpirun -np 1 ./PercMPI ../../Data/Percolation/P3 uv_005 193 194 1000 193 194 1000"
            ],
            "isBuildCommand": true
        },
        {
            "taskName": "Multiple nodes",
            "args": [
                "mkdir -p build; cd build; cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug -DCMAKE_CXX_FLAGS='-D_GLIBCXX_DEBUG -DCOMMUNICATION' .. && make -j 8; mpirun -np 8 ./PercMPI ../../Data/Percolation/P3 uv_005 193 194 1000 193 194 125"
            ],
            "isBuildCommand": true
        },
    ]
}