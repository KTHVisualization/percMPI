{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "sh",
    "isShellCommand": true,
    "args": [
        "-c"
    ],
    "showOutput": "always",
    "suppressTaskName": true,
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "taskName": "CMake & make & run",
            "args": [
                "mkdir -p build && cd build && cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug .. && make -j 8 && mpirun -np 8 ./PercMPI ../../Data/Percolation/P3 uv_000 194 193 1000 97 97 500"
            ],
            "isBuildCommand": true
        },
        {
            "taskName": "cmake",
            "args": [
                "cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug .."
            ]
        },
        {
            "taskName": "make",
            "args": [
                "make -j 8"
            ],
            "isBuildCommand": true
        },
        {
            "taskName": "CMake Test & make & run",
            "args": [
                "mkdir -p buildtest; cd buildtest; cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug -DCMAKE_CXX_FLAGS='-DTEST' .. && echo Testing MPIVectors && make -j 8; mpirun -np 1 ./PercMPI ../../Data/Percolation/P3 uv_000 194 193 1000 97 97 500"
            ],
            "isBuildCommand": true
        },
        {
            "taskName": "CMake Test Communication & make & run",
            "args": [
                "mkdir -p buildtest; cd buildtest; cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug -DCMAKE_CXX_FLAGS='-DTEST' .. && echo Testing MPIVectors && make -j 8; mpirun -np 2 ./PercMPI ../../Data/Percolation/P3 uv_000 194 193 1000 97 97 500"
            ],
            "isBuildCommand": true
        },
    ]
}