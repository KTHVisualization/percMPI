{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "sh",
    "isShellCommand": true,
    "args": [
        "-c"
    ],
    "showOutput": "always",
    "suppressTaskName": true,
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "taskName": "Single node, No Communcation",
            "args": [
                "mkdir -p builds && cd builds && cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug -DCMAKE_CXX_FLAGS='-D_GLIBCXX_DEBUG -DSINGLENODE -DFULL_LOCAL_TEST' .. && make -j 8 && mpirun -np 1 ./PercMPI ../../Data/Percolation/P3 uv_005 193 194 1000 193 194 1000 0"
            ],
            "isBuildCommand": true
        },
        {
            "taskName": "Single Node, Communication",
            "args": [
                "mkdir -p buildsc; cd buildsc; cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug -DCMAKE_CXX_FLAGS='-D_GLIBCXX_DEBUG -DSINGLENODE -DCOMMUNICATION' .. && make -j 8 && mpirun -np 1 ./PercMPI ../../Data/Percolation/P3 uv_005 193 194 1000 193 194 1000 0"
            ],
            "isBuildCommand": true
        },
        {
            "taskName": "Multiple Nodes",
            "args": [
                "mkdir -p build; cd build; cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug -DCMAKE_CXX_FLAGS='-D_GLIBCXX_DEBUG -DCOMMUNICATION' .. && make -j 8 && mpirun -np 3 ./PercMPI ../../Data/Percolation/P3 uv_005 20 20 100 20 20 50 0"
            ],
            "isBuildCommand": true
        },
        {
            "taskName": "cmake",
            "args": [
                "mkdir -p build && cd build && cmake -G 'Unix Makefiles' -DCMAKE_BUILD_TYPE=Debug -DCMAKE_CXX_FLAGS='-D_GLIBCXX_DEBUG' .."
            ]
        },
        {
            "taskName": "make",
            "args": [
                "cd build && make -j 8"
            ],
            "isBuildCommand": true
        },
    ]
}